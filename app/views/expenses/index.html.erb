<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.date %></td>
        <td><%= expense.category.name %></td>
        <td><%= expense.price %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for :date , url: filter_index_path , method: :get do |f| %>
  From Date: <%= f.date_field :start_date %><br />
  Till Date : <%= f.date_field :end_date %><br />
 
  <%= f.submit %>
  
  <%end%>
<br>
<%= @total_sum %>

<%= link_to 'New Expense', new_expense_path %>
